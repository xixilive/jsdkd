{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "config.json",
    "src/"
  ],
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "*,-express:*",
    "SERVER_HOST": "localhost",
    "SERVER_PORT": 3030,
    "REDIS_URI": "mongodb://localhost:27027/phonic_dev"
  },
  "ext": "js,json"
}
